{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": [        /* Specify list of folder names to include type definitions from. */
      "./node_modules/@types"
    ]
    },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}