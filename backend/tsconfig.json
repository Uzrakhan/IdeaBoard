{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2020"], // Explicitly define the standard library features available. Node.js backend typically needs ES features.
    "types": [
      "node",           // Crucial for 'process' and other Node.js globals
      "express",
      "cors",
      "jsonwebtoken",
      "bcryptjs",
      "lowdb"
    ]
    },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}